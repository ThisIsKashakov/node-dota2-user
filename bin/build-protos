#!/usr/bin/env bash

set -eu -o pipefail

cd "$(dirname "$0")/../"

EXPORTS_FILE='src/protobufs/index.ts'
PROTOS_PATH='Protobufs/dota2'
OUTPUT_DIR='src/protobufs/generated'
GENNY_OUTPUT='src/protobufs/protobuf-mappings.ts'

log() {
    echo "$@" >&2
}

run_protoc() {
    protoc \
        --proto_path="$PROTOS_PATH" \
        --plugin=./node_modules/.bin/protoc-gen-ts_proto \
        --ts_proto_out="$OUTPUT_DIR" \
        --ts_proto_opt=env=node \
        --ts_proto_opt=esModuleInterop=true \
        --ts_proto_opt=forceLong=string \
        --ts_proto_opt=exportCommonSymbols=false \
        --ts_proto_opt=unrecognizedEnum=false \
        --ts_proto_opt=useExactTypes=false \
        --ts_proto_opt=disableProto2Optionals=true \
        "$@"
}

cleanup() {
    log 'Cleaning up any generated files'
    rm -rf "$OUTPUT_DIR"
    rm -f "$EXPORTS_FILE"
}

init() {
    cleanup
    mkdir -p "$OUTPUT_DIR"
}

trap 'code="$?"; cleanup; wait; exit "$code"' ERR

init
# this has to be run first cause other protos depend on it
log 'Generating TS for base protos'
run_protoc "$PROTOS_PATH"/steammessages_base.proto
log 'Generating TS for main protos'
run_protoc \
    --ts_proto_opt=outputIndex=true \
    "$PROTOS_PATH"/dota_gcmessages_client.proto \
    "$PROTOS_PATH"/dota_gcmessages_client_watch.proto \
    "$PROTOS_PATH"/dota_gcmessages_msgid.proto \
    "$PROTOS_PATH"/gcsystemmsgs.proto \
    "$PROTOS_PATH"/base_gcmessages.proto \
    "$PROTOS_PATH"/dota_shared_enums.proto \
    "$PROTOS_PATH"/dota_gcmessages_client_guild.proto \
    "$PROTOS_PATH"/dota_gcmessages_client_guild_events.proto

log 'Generating exports file'
cat << EOF > "$EXPORTS_FILE"
// DO NOT MANUALLY MODIFY THIS FILE
// Generated by build-protos

EOF

all_files="$(find "$OUTPUT_DIR" -mindepth 1 -maxdepth 1 -name '*.ts' -print)"
bad_files=("$OUTPUT_DIR"/steammessages_base.ts "$OUTPUT_DIR"/valveextensions.ts)
files_to_export="$(printf '%s\n' "$all_files" "${bad_files[@]}" | LC_ALL=C sort | uniq -u)"
for file in $files_to_export; do
    echo "export * from './$(basename $OUTPUT_DIR)/$(basename "$file" .ts)';" >> "$EXPORTS_FILE"
done

log 'Running genny'
DEBUG=* ./bin/genny > "$GENNY_OUTPUT"
